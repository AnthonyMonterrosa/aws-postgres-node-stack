{
  "include": ["typescript/**.ts"],
  "exclude": ["node_modules", "javascript"],
  "compileOnSave": true,
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "charset": "utf-8",
    "incremental": true,
    "tsBuildInfoFile": "tsconfig.incremental.json",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": ["esnext"],
    "skipLibCheck": true,
    "outDir": "javascript",
    "pretty": true,
    "target": "es2018",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "alwaysStrict": true,
    "sourceMap": true
  }
}